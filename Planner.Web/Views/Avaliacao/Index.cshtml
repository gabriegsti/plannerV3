@model IEnumerable<Planner.Web.Models.AvaliacaoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Minhas Avaliações</h1>

<p>
    <a asp-action="Cadastrar">Nova Avaliação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Avaliacao)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>           
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Avaliacao)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id_Avaliacao } , new {@class= "btn btn-danger"}) |

                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Avaliacao }, new {@class= "btn btn-primary"} ) |

                @Html.ActionLink("Remover", "Remover", new { id = item.Id_Avaliacao } , new {@class= "btn btn-danger"})
                
            </td>
        </tr>
}
    </tbody>
</table>
