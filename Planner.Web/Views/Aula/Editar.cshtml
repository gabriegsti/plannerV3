@model Planner.Web.Models.AulaViewModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edição de Aulas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarPorId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">   
                <input asp-for="Id_Aula" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">   
                <input asp-for="Id_Materia" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="MateriaTitulo" class="control-label"></label>
                <input asp-for="MateriaTitulo" class="form-control" disabled/>
                <span asp-validation-for="MateriaTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Hora" class="control-label"></label>
                <input asp-for="Data_Hora" class="form-control" />
                <span asp-validation-for="Data_Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
